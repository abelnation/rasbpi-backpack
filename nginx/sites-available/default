server {
  listen 80;
  listen [::]:80;

  server_name puzzled-pi.com;
  access_log    logs/default.access.log;

  root /var/www/html;
  index index.nginx-debian.html;

  location / {
    try_files $uri $uri/ =404;
  }

  location /grafana {
    proxy_pass  http://127.0.0.1:3000;
  }

  location /echo {
    proxy_pass  http://127.0.0.1:8000;
  }
}
